%% Common project erlang options.
{erl_opts, [
    % mandatory
    debug_info,
    warnings_as_errors,
    warn_export_all,
    warn_missing_spec,
    warn_untyped_record,
    warn_export_vars,

    % by default
    warn_unused_record,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_deprecated_function
]}.

%% XRef checks
{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_functions_calls,
    deprecated_functions
]}.
% at will
% {xref_warnings, true}.

%% Tests
{cover_enabled, true}.

{deps, [
    {genlib, {git, "https://github.com/rbkmoney/genlib", {branch, master}}},
    {machinegun_core, {git, "https://github.com/rbkmoney/machinegun_core", {branch, master}}}
]}.

%% Dialyzer static analyzing
{dialyzer, [
    {warnings, [
        % mandatory
        unmatched_returns,
        error_handling,
        race_conditions,
        unknown
    ]},
    {plt_apps, all_deps}
]}.

{plugins, [
    {erlfmt, "0.11.0"}
]}.

{erlfmt, [
    {print_width, 120},
    {files, "{src,include,test}/*.{hrl,erl}"}
]}.

{shell, [
    {apps, [machinegunner]}
]}.
